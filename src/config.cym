% values from cytosim/cym/contract_anchored.cym

set simul system
{
	dim = 3
	time_step = 0.001
	viscosity = 0.05
	%random_seed = 42
}

set space cell
{
	shape = periodic
}

new cell
{
	length = 5, 5, 5
}

set fiber actin
{
	rigidity = 0.1
	segmentation = 0.1
	%display = ( line=1, 2; )
}

new 1000 actin
{
	length = 0.25
}

set hand myosin
{
	binding_rate = 10
	binding_range = 0.1
	unbinding_rate = 0.02
	unbinding_force = 3
	
	activity = move
	unloaded_speed = 0
	stall_force = 5
	display = ( size=4; color=orange; )
}

set couple motor
{
	hand1 = myosin
	hand2 = myosin
	stiffness = 1000
	fast_diffusion = 1
}

new 5000 motor

run system
{
	nb_steps = 10000
	nb_frames = 1000
}

report couple:link > link.txt
